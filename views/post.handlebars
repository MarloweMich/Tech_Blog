{{!-- <div class="row mt-4"> --}}
<div>
  <h2>{{title}}</h2>
  <p>{{body}}</p>
  <p>Created by {{user.username}} on {{format_date date_submitted}}</p>
  </div>


    <div class="row mt-4">
    {{#if logged_in}}

        <form class="form new-post-form">
            <div class="form-group">
            <textarea class="" id="comment-desc" name="comment-desc"></textarea>
            </div>
            <div class="form-group">
            <button type="submit" class="postButton btn btn-primary" id="postButton" data-id="{{id}}">Comment</button>
            </div>
        </form>
    {{/if}}

{{#if comments.length}}
  <div class="col-md-6 comment-list">
    <h3>User Comments:</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
        <div class="col-md-8">
        <p>{{comment.body}}</p>
        </div>
        <div class="col-md-6">
        <p>{{comment.user.username}}</p>
        </div>
        <div class="col-md-1">
        <p>{{format_date comment.date_submitted}}</p>
        </div>
      <div class="col-md-6">
        <button class="btn btn-sm btn-danger delComment deleteButton" data-id="{{comment.id}}">DELETE</button>
      </div>
      <p>----------------------------------------------------------------</p>
      </div>
    {{/each}}
  </div>
  {{/if}}
</div>
<script src="/js/comment.js"></script>